%h1 Listing samples

%table
  %thead
    %tr
      %th Title
      %th Link
      %th Image
      %th Summary
      %th Content
      %th Pub date
      %th
      %th
      %th

  %tbody
    - @samples.each do |sample|
      %tr
        %td= sample.title
        %td= sample.link
        %td= sample.image
        %td= sample.summary
        %td= sample.content
        %td= sample.pub_date
        %td= link_to 'Show', sample
        %td= link_to 'Edit', edit_sample_path(sample)
        %td= link_to 'Destroy', sample, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

